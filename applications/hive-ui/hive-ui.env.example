# Copy to hive-ui.env for local testing:
#   cp hive-ui.env.example hive-ui.env
#
# IMPORTANT: do not commit hive-ui.env (it contains secrets).

# If true AND ADMIN_TOKEN is set, /api/defaults may return secrets to authorized callers.
PREFILL_SECRETS=false

# Optional: require the SPA to send this token for API calls.
# ADMIN_TOKEN=change-me

# Defaults shown in the UI
GUID=q8jzk
ROADSHOW=roadshow
BASE_DOMAIN=cluster.com
INSTANCE_TYPE=g6.8xlarge
ROOT_VOLUME_SIZE=400
AWS_DEFAULT_REGION=us-east-2
USER_EMAIL=admin@acme.com
USER_TEAM=Acme
USER_USAGE=Dev
USER_USAGE_DESCRIPTION="Acme Dev Cluster"

# Secrets (leave blank unless testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Pull secret must be valid JSON. Store it as one line.
PULL_SECRET={}

# SSH public key (single line)
SSH_PUBLIC_KEY='ssh-rsa AAAA... user@host'
